<section class="container py-5">
	<div class="row justify-content-center">
		<div class="col-md-8">
			<div class="card shadow-lg border-0 animate__animated animate__bounceIn">
				<div class="card-body">
					<h2 class="card-title text-primary fw-bold mb-3">Contact Us</h2>
					<form class="row g-3">
						<div class="col-md-6">
							<label for="name" class="form-label">Name</label>
							<input type="text" class="form-control" id="name" placeholder="Your Name">
						</div>
						<div class="col-md-6">
							<label for="email" class="form-label">Email</label>
							<input type="email" class="form-control" id="email" placeholder="you@example.com">
						</div>
						<div class="col-12">
							<label for="message" class="form-label">Message</label>
							<textarea class="form-control" id="message" rows="4" placeholder="How can we help?"></textarea>
						</div>
						<div class="col-12">
							<button type="submit" class="btn btn-primary">Send Message</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
